@page 
@model Foodie.Pages.Recipes.GetAllRecipesModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Recipes[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipes[0].Introduction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipes[0].ImageData)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipes[0].Id)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var recipe in Model.Recipes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => recipe.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => recipe.Introduction)
                </td>
                <td>
                    <img src="data:image/jpg;base64,@recipe.ImageData" width="150px" height="100px"></img>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => recipe.Id)
                </td>
                <td>
                    <a asp-page="/Recipes/RecipeDetails" asp-route-recipeId="@recipe.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
