@page
@using Foodie.Services.Interfaces;
@inject IRecipeService RecipeService;
@inject IRecipeItemService RecipeItemService;
@model Foodie.Areas.Identity.Pages.Account.Manage.EditRecipeModel
@{
    ViewData["Title"] = "Edit Recipe";
}

<div>
    <a asp-page="./CheckMyRecipes">Back to List</a>
</div>
<br />

<h3> Edit Recipe @Model.Recipe.Name</h3>
<br />

<div class="col-md-4">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Recipe.Name" class="control-label"></label>
            <input asp-for="Recipe.Name" class="form-control" />
            <span asp-validation-for="Recipe.Name" class="text-danger"></span>
        </div>

        <p>Please Add Ingredients and Amount </p>
        <table class="table">
            <thead>
                <tr>
                    <th> Ingredient</th>
                    <th> Amout</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><input asp-for="RecipeItem.Name" class="form-control" /></td>
                    <td><input asp-for="RecipeItem.Amount" class="form-control" /></td>
                </tr>
                <tr>
                    <td><input asp-for="RecipeItem.Name" class="form-control" /></td>
